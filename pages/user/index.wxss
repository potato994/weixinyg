page {
  background-color: #edece8;
}
.img-bgc {
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.img-bgc .bgc-big {
  height: 120%;
  filter: blur(20rpx);
}
.img-bgc .userinfo {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
}
.img-bgc .userinfo .user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.img-bgc .userinfo .username {
  color: #fff;
  padding-top: 60rpx;
}
.user-content {
  position: relative;
}
.user-content .user-main {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  width: 90%;
}
.user-content .user-main .history-item {
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
}
.user-content .user-main .history-item navigator {
  flex: 1;
  text-align: center;
}
.user-content .user-main .history-item navigator .his-num {
  color: var(--themeColor);
}
.user-content .user-main .order-item {
  margin-top: 20rpx;
  background-color: #fff;
}
.user-content .user-main .order-item .order-title {
  padding: 20rpx 12rpx;
  border-bottom: 2rpx solid #dedede;
}
.user-content .user-main .order-item .order-content {
  display: flex;
}
.user-content .user-main .order-item .order-content navigator {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.user-content .user-main .order-item .order-content navigator .iconfont {
  font-size: 46rpx;
  color: var(--themeColor);
}
