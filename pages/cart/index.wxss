page {
  padding-bottom: 90rpx;
}
.revice_wrap .revice_btn_row {
  padding: 20rpx 0;
}
.revice_wrap .revice_btn_row button {
  width: 60%;
}
.revice_address {
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  color: #000;
  display: flex;
  border-bottom: 1rpx solid var(--themeColor);
}
.revice_address .userInfo {
  flex: 4;
}
.revice_address .telNumber {
  flex: 2;
}
.cart-main .cart-title {
  color: #000;
  font-size: 42rpx;
  border-bottom: 2rpx solid var(--themeColor);
  padding: 20rpx;
}
.cart-main .cart-list .cart-item {
  display: flex;
  padding: 10rpx;
  text-align: center;
  border: 2rpx solid #ccc;
}
.cart-main .cart-list .cart-item .cart-chk-wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-main .cart-list .cart-item .cart-img-wrap {
  flex: 3;
}
.cart-main .cart-list .cart-item .cart-img-wrap image {
  width: 80%;
}
.cart-main .cart-list .cart-item .cart-info-wrap {
  display: flex;
  flex: 5;
  flex-direction: column;
  justify-content: space-around;
}
.cart-main .cart-list .cart-item .cart-info-wrap .info-detail {
  font-size: 28rpx;
  color: #000;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-main .cart-list .cart-item .cart-info-wrap .goods-price-wrap {
  display: flex;
  justify-content: space-between;
}
.cart-main .cart-list .cart-item .cart-info-wrap .goods-price-wrap .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
}
.cart-main .cart-list .cart-item .cart-info-wrap .goods-price-wrap .cart-num-wrap {
  display: flex;
  padding: 0 10rpx;
}
.cart-main .cart-list .cart-item .cart-info-wrap .goods-price-wrap .cart-num-wrap .cart-num-edit {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #dbdbdb;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.cart-main .cart-list .cart-item .cart-info-wrap .goods-price-wrap .cart-num-wrap .cart-num {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  margin: 0 5rpx;
}
.cart-main .cart-list .empty_cart {
  text-align: center;
}
.cart-main .cart-list .empty_cart image {
  width: 50%;
}
.foot-tool {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #cccccc;
  color: #000;
}
.foot-tool .tool-chk-wrap {
  flex: 2;
  display: flex;
  align-items: center;
}
.foot-tool .total-price {
  flex: 4;
  text-align: right;
  font-size: 36rpx;
  padding: 0rpx 12rpx;
}
.foot-tool .total-price .total-wrap .price {
  color: var(--themeColor);
  font-weight: 600;
}
.foot-tool .total-price .freight {
  font-size: 30rpx;
}
.foot-tool .btn-pay {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  font-size: 38rpx;
  color: #fff;
}
